{
    "openapi": "3.0.0",
    "info": {
        "title": "TicketCRM API",
        "description": "API documentation for TicketCRM application",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "{{APP_URL}}",
            "description": "Development server"
        }
    ],
    "paths": {
        "/api/tickets": {
            "post": {
                "tags": [
                    "Tickets"
                ],
                "summary": "Create a new ticket",
                "description": "Creates a new ticket with customer information",
                "operationId": "2a7d76295d0f9f3e0e63adb2ed4a0596",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "theme",
                                    "text",
                                    "email"
                                ],
                                "properties": {
                                    "customer_id": {
                                        "description": "ID of existing customer (optional if providing email/phone)",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "email": {
                                        "description": "Customer email (required if no customer_id provided)",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "phone": {
                                        "description": "Customer phone (optional)",
                                        "type": "string",
                                        "example": "+1234567890"
                                    },
                                    "name": {
                                        "description": "Customer name (optional)",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "theme": {
                                        "description": "Ticket theme/subject",
                                        "type": "string",
                                        "example": "Support Request"
                                    },
                                    "text": {
                                        "description": "Ticket content",
                                        "type": "string",
                                        "example": "Detailed description of the issue"
                                    },
                                    "status": {
                                        "description": "Ticket status",
                                        "type": "string",
                                        "enum": [
                                            "new",
                                            "in_progress",
                                            "done"
                                        ],
                                        "example": "new"
                                    },
                                    "date_answer": {
                                        "description": "Date of answer",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2023-12-25T10:00Z"
                                    },
                                    "attachments": {
                                        "description": "Attachments to attach to the ticket",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Ticket created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ticket created successfully"
                                        },
                                        "ticket": {
                                            "$ref": "#/components/schemas/Ticket"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Customer": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "phone": {
                        "type": "string",
                        "example": "+1234567890"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Ticket": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "customer": {
                        "$ref": "#/components/schemas/Customer"
                    },
                    "theme": {
                        "type": "string",
                        "example": "Support Request"
                    },
                    "text": {
                        "type": "string",
                        "example": "Detailed description of the issue"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "new",
                            "in_progress",
                            "done"
                        ],
                        "example": "new"
                    },
                    "date_answer": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-12-25T10:00Z"
                    },
                    "attachments": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/File"
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "File": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "file_name": {
                        "type": "string",
                        "example": "document.pdf"
                    },
                    "mime_type": {
                        "type": "string",
                        "example": "application/pdf"
                    },
                    "size": {
                        "type": "integer",
                        "example": 102400
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "example": "http://example.com/storage/files/document.pdf"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Tickets"
        }
    ]
}
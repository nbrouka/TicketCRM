                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "john@example.com"
                                        },
                                        "email_verified_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-12-25T10:00:00.00000Z"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-12-25T10:00:00.000000Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-12-25T10:00:00.0000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/tickets": {
            "get": {
                "tags": [
                    "Authenticated Tickets"
                ],
                "summary": "Get all tickets",
                "description": "Returns a list of all tickets for authenticated user with cursor pagination",
                "operationId": "ddc3a5e66a83482e874c84e71ebc4505",
                "parameters": [
                    {
                        "name": "cursor",
                        "in": "query",
                        "description": "Cursor for pagination - used to fetch the next or previous page of results",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of records per page (default: 15, max: 100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "default": 15
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of tickets",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Ticket"
                                            }
                                        },
                                        "links": {
                                            "type": "object",
                                            "properties": {
                                                "first": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "last": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "prev": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "next": {
                                                    "type": "string",
                                                    "nullable": true
                                                }
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "path": {
                                                    "type": "string"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "next_cursor": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "prev_cursor": {
                                                    "type": "string",
                                                    "nullable": true
                                                }
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Authenticated Tickets"
                ],
                "summary": "Create a new ticket",
                "description": "Creates a new ticket with customer information (authenticated users)",
                "operationId": "cfc7c1ca165d45fb488443df73e66587",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "theme",
                                    "text",
                                    "email"
                                ],
                                "properties": {
                                    "customer_id": {
                                        "description": "ID of existing customer (optional if providing email/phone)",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "email": {
                                        "description": "Customer email (required if no customer_id provided)",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "phone": {
                                        "description": "Customer phone (optional)",
                                        "type": "string",
                                        "example": "+1234567890"
                                    },
                                    "name": {
                                        "description": "Customer name (optional)",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "theme": {
                                        "description": "Ticket theme/subject",
                                        "type": "string",
                                        "example": "Support Request"
                                    },
                                    "text": {
                                        "description": "Ticket content",
                                        "type": "string",
                                        "example": "Detailed description of the issue"
                                    },
                                    "status": {
                                        "description": "Ticket status",
                                        "type": "string",
                                        "enum": [
                                            "new",
                                            "in_progress",
                                            "done"
                                        ],
                                        "example": "new"
                                    },
                                    "date_answer": {
                                        "description": "Date of answer",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2023-12-25T10:00Z"
                                    },
                                    "attachments[]": {
                                        "description": "Attachments to attach to the ticket",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Ticket created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ticket created successfully"
                                        },
                                        "ticket": {
                                            "$ref": "#/components/schemas/Ticket"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/feedback": {

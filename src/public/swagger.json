                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "theme",
                                    "text",
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "Customer email",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "phone": {
                                        "description": "Customer phone (optional)",
                                        "type": "string",
                                        "example": "+1234567890"
                                    },
                                    "name": {
                                        "description": "Customer name (optional)",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "theme": {
                                        "description": "Ticket theme/subject",
                                        "type": "string",
                                        "example": "Feedback"
                                    },
                                    "text": {
                                        "description": "Ticket content",
                                        "type": "string",
                                        "example": "Detailed feedback message"
                                    },
                                    "attachments[]": {
                                        "description": "Attachments to attach to the ticket",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Ticket created successfully from feedback",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ticket created successfully"
                                        },
                                        "ticket": {
                                            "$ref": "#/components/schemas/Ticket"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/tickets/{ticket}": {
